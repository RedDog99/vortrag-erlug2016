% Title page: default

\defbeamertemplate*{title page}{FFF theme}[1][]
{%
  \parbox[c][\paperheight][s]{\textwidth}{
  \vspace*{0.2\textheight}
  \hspace*{0.3\textwidth}
    \begin{beamercolorbox}[wd=0.65\textwidth,sep=2pt,#1]{title}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \hfill
    \vspace*{0.05\textheight}
    \hspace*{0.3\textwidth}
    \begin{beamercolorbox}[wd=0.65\textwidth,sep=2pt,#1]{subtitle}
      \ifx\insertsubtitle\@empty%
        \vphantom{X}\par%
      \else%
        {\usebeamerfont{subtitle}\usebeamercolor[fg]{subtitle}\insertsubtitle\par}%
      \fi%     
    \end{beamercolorbox}%
    \hfill
    \vspace{40pt}
    \hspace*{0.3\textwidth}
    \begin{beamercolorbox}[wd=0.65\textwidth,sep=2pt,#1]{author}
      \usebeamerfont{author}\insertauthor\par
      \ifx\insertinstitute\@empty%
        \vphantom{X}\par%
      \else%
          \usebeamerfont{institute}\insertinstitute\par
      \fi%
      \usebeamerfont{date}\insertdate\par
    \end{beamercolorbox}
  \vfill
  \hfill
    \begin{minipage}[b]{0.4\paperwidth}
      \includegraphics[width=\textwidth]{img/logo}
      \vspace{5pt}
    \end{minipage}
  }
}

